<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:padding="30dp" >

    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        >

    </ImageView>

    <TextView
        android:id="@+id/detailText"
        android:padding="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:layout_below="@+id/detailImage"
        android:text="Desription"
        android:gravity="center"
        android:layout_alignLeft="@+id/detailImage"
        />

    <TextView
        android:id="@+id/detailLPrice"
        android:padding="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_below="@+id/detailText"
        android:text="Lowest"
        android:gravity="center"
        android:layout_alignLeft="@+id/detailImage"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buy now"
        android:textSize="18dp"
        android:id="@+id/detailButton"
        android:layout_below="@+id/detailLPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/detailComp"
        android:padding="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:layout_below="@+id/detailButton"
        android:text="Comp"
        android:gravity="center"
        android:layout_alignLeft="@+id/detailImage"
        />

</RelativeLayout>
