<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:gravity="center_horizontal"
android:orientation="vertical" android:paddingBottom="16dp"
android:paddingLeft="16dp"
android:background="#fff"
android:paddingRight="16dp"
android:paddingTop="16dp"
tools:context="com.i.quick_gift.LoginActivity">

<ScrollView
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/scrollview">
        <TextView
            android:id="@+id/profiles"
            android:textColor="#333"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="@string/profile"
            android:layout_marginBottom="20dp"
            android:textSize="20dp" />
        <Button
            android:id="@+id/addProfile"
            android:layout_below="@id/profiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addperson"
            android:textColor="#333"
            android:background="#a8f350"
            android:onClick="goToName"/>

    </RelativeLayout>
</ScrollView>
</LinearLayout>
